# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

# ============================================================================
# Universal settings
# ============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ============================================================================
# Python files
# ============================================================================
[*.{py,pyi}]
indent_size = 4
max_line_length = 100

# ============================================================================
# YAML files
# ============================================================================
[*.{yml,yaml}]
indent_size = 2

# ============================================================================
# TOML files
# ============================================================================
[*.toml]
indent_size = 4

# ============================================================================
# Markdown files
# ============================================================================
[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 88

# ============================================================================
# Makefile
# ============================================================================
[Makefile]
indent_style = tab

# ============================================================================
# Shell scripts
# ============================================================================
[*.{sh,bash,zsh}]
indent_size = 2

# ============================================================================
# JSON files
# ============================================================================
[*.json]
indent_size = 2

# ============================================================================
# JavaScript/TypeScript
# ============================================================================
[*.{js,jsx,ts,tsx}]
indent_size = 2

# ============================================================================
# HTML/CSS
# ============================================================================
[*.{html,css,scss,sass}]
indent_size = 2

# ============================================================================
# SQL files
# ============================================================================
[*.sql]
indent_size = 2

# ============================================================================
# Docker files
# ============================================================================
[{Dockerfile,*.dockerfile}]
indent_size = 2

# ============================================================================
# Configuration files
# ============================================================================
[*.{ini,cfg}]
indent_size = 4

# ============================================================================
# Git files
# ============================================================================
[.gitconfig]
indent_style = tab